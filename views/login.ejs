<%- include ('partials/_head.ejs') -%>

<!-- Login -->
<header>
    <nav class="navbar navbar-expand-lg nav-xatruch nav-panel">
        <a href="/" class="navbar-brand">
            <img src="./img/icon.png" class="img-logo" alt="logo">
            <span class="brand"> XATRUCH </span>
        </a>
    </nav>
</header>
<main>

    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center font-weight-bold">
                    <div class="card-header">
                        Iniciar Sesi√≥n en Xatruch Panel
                    </div>
                    <img src="./img/icon.png" alt="Go" class="card-img-top mx-auto mt-4 w-25">
                    <span class="brand mt-2"> XATRUCH </span>
                    <div class="card-body">
                        <form action="/signin" method="POST">
                            <div class="form-group">
                                <input type="text" name="username" placeholder="Username" class="form-control" autofocus required>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" placeholder="Password" class="form-control" required>
                            </div>
                            <button class="btn btn-dark btn-login btn-block">
                                Ingresar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
<!-- Sweet Alert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.4/dist/sweetalert2.all.min.js"></script>
    <% if (typeof alert != "undefined")  { %>
        <script>
        Swal.fire({
          title:'<%= alertTitle %>',
          text:'<%= alertMessage %>',
          icon:'<%= alertIcon %>',
          showConfirmButton: <%= showConfirmButton %>,
          timer: <%= timer %>
        }).then(()=>{
          window.location='/<%= ruta %>'
        })
        </script>
  <% } %>

